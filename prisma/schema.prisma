generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model Quote {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName    String
  lastName     String
  email        String
  phone        String
  services     String
  NoOfServices Int
  comments     String
}
model Contact {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  fullName    String
  email        String
  phone        String
  message     String
}

model Service {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String   
  description String   
  image       String    // Store the image path in the DB
  price       Float    
  status      String   @default("active")
}

model testimonials {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  fullName      String   
  description String   
  image       String    // Store the image path in the DB  
  status      String   @default("active")
}

// schema.prisma

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  fullname    String  
  role        String  
  linkedin    String? 
  instagram   String? 
  twitter     String? 
  email       String  
  image       String
  phoneNumber String
  status      String   @default("active")
}

model blogs {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title      String   
  author     String
  description String   
  image       String    // Store the image path in the DB  
  status      String   @default("active")
  createdAt   DateTime @default(now()) // Add createdAt field with default value
}





